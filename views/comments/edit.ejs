<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit Comment on <%= boardgame.name %></h1>
    
    <div style="width: 30%; margin: 30px auto"> <!-- DEBUG -->
        <form action="/boardgames/<%= boardgame._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <a href="/boardgames">Back to the board game list</a>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-dice-d20"></i> Welcome to ScoreBoardGames!</h1>
            <p>All the board games, scored.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/boardgames/new">Add a new Board Game</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Board Games</h3>
        </div>
    </div>
    
    <!-- DEBUG -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;"> 
        <% boardgames.forEach(function(game) { %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= game.image %>">
                    <div>
                        <h4><%= game.name %></h4>
                    </div>
                    <p>
                        <a href="/boardgames/<%= game._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>